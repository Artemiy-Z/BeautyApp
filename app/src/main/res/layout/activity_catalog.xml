<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatalogActivity"
    android:foreground="@drawable/shadow_gradient"

android:id="@+id/main_cont">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        android:background="#EEEEEE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="168dp"
            android:layout_height="168dp"
            android:scaleType="fitXY"
            android:src="@drawable/logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textColor="@color/pink1"
            android:gravity="center"
            android:text="Какого рода услуга вам необходима?"
            android:layout_marginTop="27dp"
            android:layout_marginHorizontal="20dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="36dp">
            
            <TableRow>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:id="@+id/haircut"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/pink2"
                        android:src="@drawable/haircut"
                        android:scaleType="fitXY"
                        android:paddingHorizontal="22.5dp"
                        android:paddingVertical="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/pink1"
                        android:gravity="center"
                        android:text="Стрижка" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:id="@+id/manicure"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/pink2"
                        android:src="@drawable/manicure"
                        android:scaleType="fitXY"
                        android:paddingHorizontal="19dp"
                        android:paddingVertical="21.6dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/pink1"
                        android:gravity="center"
                        android:text="Маникюр" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:id="@+id/facecare"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/pink2"
                        android:src="@drawable/facecare"
                        android:scaleType="fitXY"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/pink1"
                        android:gravity="center"
                        android:text="Лицо" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:id="@+id/paint"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/pink2"
                        android:src="@drawable/paint"
                        android:scaleType="fitXY"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/pink1"
                        android:gravity="center"
                        android:text="Покраска" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_marginTop="16dp">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:id="@+id/spa"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/pink2"
                        android:src="@drawable/spa"
                        android:scaleType="fitXY"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="21dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/pink1"
                        android:gravity="center"
                        android:text="Спа" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:id="@+id/epilation"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/pink2"
                        android:src="@drawable/depilation"
                        android:scaleType="fitXY"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/pink1"
                        android:gravity="center"
                        android:text="Эпиляция" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:id="@+id/cosmetic"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/pink2"
                        android:src="@drawable/cosmetic"
                        android:scaleType="fitXY"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/pink1"
                        android:gravity="center"
                        android:text="Макияж" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:id="@+id/massage"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/pink2"
                        android:src="@drawable/massage"
                        android:scaleType="fitXY"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/pink1"
                        android:gravity="center"
                        android:text="Массаж" />
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout android:id="@+id/catalog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/pink4"
            android:gravity="center">
            <ImageView
                tools:ignore="true"
                android:layout_width="37.36dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/catalog_icon"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/pink2"
            android:gravity="center">
            <ImageView
                tools:ignore="true"
                android:layout_width="40.87dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/account_icon"/>
        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>